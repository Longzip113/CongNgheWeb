@{
    ViewBag.Title = "DanhSachGiayPaging";
    Layout = "~/Views/LayoutMaster/UserLayout.cshtml";
}

@using Project.Models;
@model List<SANPHAM>

<div class="container">
    <div class="row">
        <div class="col-xl-3 col-lg-4 col-md-5">
            <div class="sidebar-categories">
                <div class="head">Lộc sản phẩm</div>
                <ul class="main-categories">
                    <li class="main-nav-list"><a data-toggle="collapse" href="#fruitsVegetable" aria-expanded="false" aria-controls="fruitsVegetable"><span
                        class="lnr lnr-arrow-right"></span>Thương hiệu<span class="number">(9)</span></a>
                        <ul class="collapse" id="fruitsVegetable" data-toggle="collapse" aria-expanded="false" aria-controls="fruitsVegetable">
                            @Html.Action("ThuongHieu", "CuaHang")
                        </ul>
                    </li>

                    @*<li class="main-nav-list"><a data-toggle="collapse" href="#meatFish" aria-expanded="false" aria-controls="meatFish"><span
								 class="lnr lnr-arrow-right"></span>Màu sắc<span class="number">(5)</span></a>
							<ul class="collapse" id="meatFish" data-toggle="collapse" aria-expanded="false" aria-controls="meatFish">
								<li class="main-nav-list child"><a href="#">Đỏ<span class="number">(13)</span></a></li>
								<li class="main-nav-list child"><a href="#">Xanh<span class="number">(09)</span></a></li>
								<li class="main-nav-list child"><a href="#">Vàng<span class="number">(17)</span></a></li>
								<li class="main-nav-list child"><a href="#">Đen<span class="number">(01)</span></a></li>
								<li class="main-nav-list child"><a href="#">Trắng<span class="number">(11)</span></a></li>
							</ul>
						</li>*@
                    <li class="main-nav-list"><a data-toggle="collapse" href="#cooking" aria-expanded="false" aria-controls="cooking"><span
                        class="lnr lnr-arrow-right"></span>Giá<span class="number">(3)</span></a>
                        <ul class="collapse" id="cooking" data-toggle="collapse" aria-expanded="false" aria-controls="cooking">
                            <li class="main-nav-list child"><a href="@Url.Action("DanhSachGiayPaging", "CuaHang", new { @style = "Gia", @item = 1, @skip=0 })">0 -> 100.000</a></li>
                            <li class="main-nav-list child"><a href="@Url.Action("DanhSachGiayPaging", "CuaHang", new { @style = "Gia", @item = 2, @skip=0 })">100.000 -> 500.000</a></li>
                            <li class="main-nav-list child"><a href="@Url.Action("DanhSachGiayPaging", "CuaHang", new { @style = "Gia", @item = 3, @skip=0 })">500.000 < </a></li>
                        </ul>
                    </li>
                    <li class="main-nav-list"><a data-toggle="collapse" href="#cookingg" aria-expanded="false" aria-controls="cooking"><span
                        class="lnr lnr-arrow-right"></span>Size<span class="number">(3)</span></a>
                        <ul class="collapse" id="cookingg" data-toggle="collapse" aria-expanded="false" aria-controls="cooking">
                            <li class="main-nav-list child"><a href="@Url.Action("DanhSachGiayPaging", "CuaHang", new { @style = "Size", @item = 37, @skip=0 })">37</a></li>
                            <li class="main-nav-list child"><a href="@Url.Action("DanhSachGiayPaging", "CuaHang", new { @style = "Size", @item = 38, @skip=0 })">38</a></li>
                            <li class="main-nav-list child"><a href="@Url.Action("DanhSachGiayPaging", "CuaHang", new { @style = "Size", @item = 39, @skip=0 })">39</a></li>

                        </ul>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-xl-9 col-lg-8 col-md-7">
            <!-- Start Filter Bar -->
            <div class="filter-bar d-flex flex-wrap align-items-center">
                <div class="sorting">
                    <select>
                        <option value="1">Tất cả sản phẩm</option>
                    </select>
                </div>
            </div>
            <!-- End Filter Bar -->
            <!-- Start Best Seller -->
            <section class="lattest-product-area pb-40 category-list">
                <div class="row">
                    @{
                        foreach (var item in Model)
                        {
           
                        <div class="col-lg-4 col-md-6">
                            <div class="single-product">
                                <img class="img-fluid" src="@Url.Content("~/anh/" + item.HINHANHSP)"  alt="Image"/>
                                <div class="product-details">
                                    <h6>@item.TENSP</h6>
                                    <div class="price">
                                        <h6>@string.Format("{0:N0}", @item.GIABAN) VNĐ</h6>
                                    </div>
                                    <div class="prd-bottom">
                                        <a href="@Url.Action("ThemGioHang", "GioHang", new { @msp = @item.IDSP, @strURL = Request.Url.ToString() })" class="social-info">
                                            <span class="ti-bag"></span>
											<p class="hover-text">Thêm giỏ hàng</p>
										</a>
										<a href="@Url.Action("ChiTietSanPham", "CuaHang", new { @ma = item.IDSP })" class="social-info">
											<span class="lnr lnr-heart"></span>
											<p class="hover-text">Đánh giá</p>
										</a>
										<a href="@Url.Action("ChiTietSanPham", "CuaHang", new { @ma = item.IDSP })" class="social-info">
                                            <span class="lnr lnr-move"></span>
											<p class="hover-text">Xem chi tiết</p>
										</a>
                                    </div>

                                </div>
                            </div>
                        </div>
                        }
                    }
                </div>
                <div>
                    @for (var i = 1; i <= ViewBag.paging; i++)
                    {
                        <a class="primary-btn" href="@Url.Action("DanhSachGiayPaging", "CuaHang", new { style = ViewBag.Style, item = 0, skip = 9 * (@i - 1), pageSize = 9 })">@i</a>
                    }
                </div>
            </section>
            <!-- Start Filter Bar -->
            <div class="filter-bar d-flex flex-wrap align-items-center">
                
            </div>
            <!-- End Filter Bar -->
        </div>
    </div>
</div>

