@{
    ViewBag.Title = "Login";
    Layout = "~/Views/LayoutMaster/UserLayout.cshtml";
}
<!--================Login Box Area =================-->
<section class="login_box_area section_gap">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login_box_img">
                    <img class="img-fluid" src="/Template/img/login.jpg" alt="">
                    <div class="hover">
                        <h4>Dịch vụ mới !</h4>
                        <p>Hãy tạo tài khoản và sử dụng những dịch vụ tốt nhất bên chúng tôi !!!</p>
                        <a class="primary-btn" href="@Url.Action("register", "Login", new { user = "@"})">Tạo tài khoản mơi</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="login_form_inner">
                    <h4 style="color: #e38330">@ViewData["loidathang"]</h4>
                    <h3>Đăng nhập</h3>
                    <form class="row login_form" action="@Url.Action("Login", "Login")" id="contactForm" novalidate="novalidate">
                        <div class="col-md-12 form-group">
                            <input type="text" class="form-control" id="namee" name="user" placeholder="Tài khoản" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Tài khoản'">
                        </div>

                        <div class="col-md-12 form-group">
                            <input type="password" class="form-control" id="name" name="pass" placeholder="Mật khẩu" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Mật khẩu'">
                        </div>
                        <div class="col-md-12 form-group">
                            <div class="creat_account">
                                <p style="color: red">@ViewData["loi"]</p>
                            </div>
                        </div>
                        <div class="col-md-12 form-group">
                            <button type="submit" value="submit" class="primary-btn">Đăng Nhập</button>
                            <a href="#">Quên mật khẩu?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Login Box Area =================-->
