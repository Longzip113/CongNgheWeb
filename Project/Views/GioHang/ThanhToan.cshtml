@{
    ViewBag.Title = "ThanhToan";
    Layout = "~/Views/LayoutMaster/UserLayout.cshtml";
}
@using Project.Models;
<!--================Order Details Area =================-->
<section class="order_details section_gap">
	<div class="container">
		<h3 class="title_confirmation">Cảm ơn bạn đã đặt hàng của chúng tôi</h3>
		<div class="row order_d_inner">
			<div class="col-lg-4">
				<div class="details_item">
					<h4>Thông tin đơn hàng</h4>
					<ul class="list">
						<li><a href="#"><span>Mã đơn hàng</span> : # @ViewBag.MaDonHang</a></li>
						<li><a href="#"><span>Ngày đặt</span> : @DateTime.Now.ToString("MM/dd/yyyy H:mm");</a></li>
						<li><a href="#"><span>Thành tiền</span> : @String.Format("{0:0,0}", ViewBag.TongThanhTien) VNĐ</a></li>
						<li><a href="#"><span>Hình thức thanh toán</span> : Khi giao hàng</a></li>
					</ul>
				</div>
			</div>
			<div class="col-lg-4">
			</div>
			<div class="col-lg-4">
				<div class="details_item">
					<h4>Địa chỉ giao hàng</h4>
					<ul class="list">
						<li><a href="#"><span>Tên Khách Hang</span> : @((Session["LOGIN"] as UserLogin).HoTen);</a></li>
						<li><a href="#"><span>Số điện Thoại</span> : @((Session["LOGIN"] as UserLogin).SDT1);</a></li>
						<li><a href="#"><span>Địa Chỉ</span> : @((Session["LOGIN"] as UserLogin).DiaChi1);</a></li>
					</ul>
				</div>
			</div>
		</div>
		<div class="order_details_table">
			<h2>Chi tiết đơn hàng</h2>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th scope="col">Sản Phẩm</th>
							<th scope="col">Số lượng</th>
							<th scope="col">Đơn giá</th>
						</tr>
					</thead>
					<tbody>
                        @foreach (var item in Model)
                        {
						    <tr>
							    <td>
								    <p>@item.sTenSP</p>
							    </td>
							    <td>
								    <h5>x @item.iSoLuong</h5>
							    </td>
							    <td>
								    <p>@String.Format("{0:0,0}", item.dThanhTien) VNĐ</p>
							    </td>
						    </tr>
                        }

						<tr>
							<td>
								<h4>Tiền Hàng</h4>
							</td>
							<td>
								<h5></h5>
							</td>
							<td>
								<p>@String.Format("{0:0,0}", ViewBag.TongThanhTien) VND</p>
							</td>
						</tr>
						<tr>
							<td>
								<h4>Tiền giao hàng</h4>
							</td>
							<td>
								<h5></h5>
							</td>
							<td>
								<p> 25,000 VND</p>
							</td>
						</tr>
						<tr>
							<td>
								<h4>Thành Tiền</h4>
							</td>
							<td>
								<h5></h5>
							</td>
							<td>
								<p>@String.Format("{0:0,0}", ViewBag.TongThanhTien + 25000) VND</p>
							</td>
						</tr>
					</tbody>
                    <div class="checkout_btn_inner d-flex align-items-center">
                                        <a  class="primary-btn" href="@Url.Action("DanhSachGiayPaging", "CuaHang", new {style = "all", item = 0, skip=0})">Mua hàng tiếp</a>
                                    </div>
				</table>
			</div>
		</div>
	</div>
</section>
<!--================End Order Details Area =================-->
